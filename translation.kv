#:kivy 1.9.1
<Box1>:
    orientation: "vertical"
    inp: inp
    out: out
    spin: spin
    TextInput:
        id: inp
        text: "Enter text here"
        font_size: 30
        size_hint: 1,.5

    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Choose destination language"
            font_size: "30dp"
            size_hint: .5,.5
            pos_hint: {"y": .3}

        Spinner:
            id: spin
            size_hint: .25,.5
            pos_hint: {"y": .3}
            text: "english"
            values: ["french","german","italian","russian","vietnamese"]
            on_text: root.clicked(spin.text)

        Button:
            text: "Translate"
            size_hint: .25,.5
            pos_hint: {"center_x": .5,"y": .3}
            color: 1,0.5,0,1
            on_press: root.pressed()

    TextInput:
        id: out
        font_size: 30
        size_hint: 1,.5